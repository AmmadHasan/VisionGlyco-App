                       android:text="170 mg/dl"
                       android:padding="8dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="High"
                       android:padding="8dp" />
               </TableRow>
               <!-- Add more TableRow elements with random values as needed -->
           </TableLayout>
       </LinearLayout>

        <!-- Download Button -->
        <Button
            android:id="@+id/download_button"
            android:layout_width="wrap_content"
