<!--     Static Glucose Level Table-->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:gravity="center">
           <TableLayout
               android:id="@+id/glucose_level_table"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:textAlignment="center"
               android:layout_marginTop="16dp">

               <!-- Table Header Row -->
               <TableRow>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="S. No"
                       android:textStyle="bold"
                       android:padding="8dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Time"
                       android:textStyle="bold"
                       android:padding="8dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Glucose Level"
                       android:textStyle="bold"
                       android:padding="8dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Status"
                       android:textStyle="bold"
                       android:padding="8dp" />
               </TableRow>

               <!-- Table Rows with Random Values -->
               <TableRow>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="1"
                       android:padding="8dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="9:00 AM"
                       android:padding="8dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="120 mg/dl"
                       android:padding="8dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Normal"
                       android:padding="8dp" />
               </TableRow>
               <TableRow>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="2"
                       android:padding="8dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="12:00 AM"
                       android:padding="8dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="180 mg/dl"
                       android:padding="8dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="High"
                       android:padding="8dp" />
               </TableRow>
               <TableRow>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="3"
                       android:padding="8dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="12:00 PM"
                       android:padding="8dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="90 mg/dl"
                       android:padding="8dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Low"
                       android:padding="8dp" />
               </TableRow>
               <TableRow>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="4"
                       android:padding="8dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
